{% if section.blocks.size > 0 -%}
  <div
    class="popups"
    data-section-id="{{ section.id }}"
    data-section-type="popup"
  >
    {% for block in section.blocks -%}
      {% liquid
        # Only allow on certain pages if show_on_specific_page is enabled
        if block.settings.show_on_specific_page and block.settings.target_page != blank and block.settings.target_page != request.path
          # Allow merchants to view and edit popup in customizer
          unless request.design_mode
            continue
          endunless
        endif

        # Only show to not logged in visitors if disable_for_account_holders is enabled
        if block.settings.disable_for_account_holders and customer
          # Allow merchants to view and edit popup in customizer
          unless request.design_mode
            continue
          endunless
        endif

        assign type = block.type | split: '_' | first
        assign is_signup = block.type | split: '_' | last

        if block.settings.delay == null
          assign delay = 'timer_0' | split: '_'
        else
          assign delay = block.settings.delay | split: '_'
        endif

        assign is_countdown = false

        if block.type == 'popup_countdown_signup' or block.type == 'flyout_countdown_signup'
          assign is_countdown = true
        endif

        if block.settings.frequency == null
          assign frequency = 'frequency_0' | split: '_' | last
        else
          assign frequency = block.settings.frequency | split: '_' | last
        endif

        assign delay_type = delay | first
        assign delay_value = delay | last
        assign overlay_opacity = block.settings.overlay_opacity | divided_by: 100.0
        assign image_adjacent = false

        if block.settings.image_position == 'left' or block.settings.image_position == 'right'
          assign image_adjacent = true
        endif

        assign sizes = '450px'

        case block.settings.popup_size
          when 'small'
            if image_adjacent
              assign sizes = '(min-width: 720px) 620px, calc(100vw - 24px)'
            else
              assign sizes = '(min-width: 720px) 450px, calc(100vw - 24px)'
            endif
          when 'medium'
            if image_adjacent
              assign sizes = '(min-width: 720px) 720px, calc(100vw - 24px)'
            else
              assign sizes = '(min-width: 720px) 550px, calc(100vw - 24px)'
            endif
          when 'large'
            if image_adjacent
              assign sizes = '(min-width: 720px) 820px, calc(100vw - 24px)'
            else
              assign sizes = '(min-width: 720px) 650px, calc(100vw - 24px)'
            endif
        endcase

        assign form_submitted = false

        assign popup_class = 'popup'
        assign popup_type_class = ' popup--[[type]]' | replace: '[[type]]', type
        assign popup_flyout_position_class = ' popup--flyout-position-[[fp]]' | replace: '[[fp]]', block.settings.flyout_position
        assign popup_size_class = ' popup--size-[[size]]' | replace: '[[size]]', block.settings.popup_size
        assign popup_image_position_class = ' popup--image-position-[[ip]]' | replace: '[[ip]]', block.settings.image_position

        assign popup_class = popup_class | append: popup_type_class | append: popup_flyout_position_class | append: popup_size_class

        if block.settings.image != blank
          assign popup_class = popup_class | append: ' popup--has-image'

          if block.settings.image_position == 'left' or block.settings.image_position == 'right'
            assign popup_class = popup_class | append: ' popup--image-is-adjacent'
          endif
        endif

        assign popup_class = popup_class | append: popup_image_position_class

        unless block.settings.show_image_on_mobile
          assign popup_class = popup_class | append: ' popup--hide-image-on-mobile'
        endunless

        assign popup_class = popup_class | append: ' animation animation--popup'
      -%}

      <div
        class="{{ popup_class }}"
        data-popup
        data-id="{{ block.id }}"
        data-popup-type="{{ type }}"
        data-delay-type="{{ delay_type }}"
        data-delay-value="{{ delay_value }}"
        data-hour-frequency="{{ frequency }}"
        data-show-on-exit-intent="{{ block.settings.show_on_exit_intent }}"
        data-is-signup="{% if is_signup == 'signup' %}true{% else %}false{% endif %}"
        {% if is_signup == 'signup' -%}
          data-scroll-lock-ignore
        {%- endif %}
        style="
          --color-background: {{ block.settings.background_color }};
          --color-text: {{ block.settings.text_color }};
          --color-text-link: {{ block.settings.text_color }};
          --text-alignment: {{ block.settings.content_alignment }};
          --overlay-background: {{ block.settings.color_overlay }};
          --overlay-opacity: {{ overlay_opacity }};
          --color-text-input: {{ block.settings.input_color }};
          --color-background-input: {{ block.settings.input_background }};
        "
        {{ block.shopify_attributes }}
      >
        <div class="popup__wash"></div>

        <div class="popup__content">
          <div class="popup__content-inner">
            {% unless type == 'age' -%}
              <button
                type="button"
                class="popup__dismiss-icon"
                data-dismiss-popup
                aria-label="{{ 'general.accessibility.close_modal' | t }}"
              >
                {%- render 'icon-button', icon: 'modal-drawer-close', icon_size: 24 -%}
              </button>
            {%- endunless %}

            {% unless block.settings.image == blank -%}
              {% render 'image',
                wrapper_class: 'popup__image',
                image: block.settings.image,
                sizes: sizes,
                aspect_ratio: 'externally_set',
                focal_point: block.settings.focal_point,
                include_placeholder: false,
                animate: true
              -%}
            {%- endunless %}

            <div class="popup__text-container animation--container">
              {% if is_countdown -%}
                {%- capture countdown -%}
                  <div class="popup__countdown">
                    {% render 'countdown-timer',
                      year: block.settings.year,
                      month: block.settings.month,
                      day: block.settings.day,
                      hour: block.settings.hour,
                      minute: block.settings.minute,
                      time_zone_selection: block.settings.time_zone_selection,
                      hide_timer_on_complete: block.settings.hide_timer_on_complete,
                      timer_complete_message: block.settings.timer_complete_message,
                      size: 'small'
                    -%}
                  </div>
                {%- endcapture -%}
              {%- endif %}

              {% liquid
                if is_countdown and block.settings.countdown_positioning == 'above_heading'
                  echo countdown
                endif
              -%}

              {% unless block.settings.accent == blank -%}
                <div class="popup__accent fs-accent section-blocks__accent">
                  <span class="accent__text">
                    {{ block.settings.accent }}

                    {% if block.settings.accent_divider_enable -%}
                      <span class="accent__divider color-{{ block.settings.accent_divider_color }}"></span>
                    {%- endif %}
                  </span>
                </div>
              {%- endunless %}

              {% unless block.settings.heading == blank -%}
                {% liquid
                  capture heading_font_class
                    render 'settings-text-size', type: 'heading', size: block.settings.heading_font_size
                  endcapture
                -%}

                <h3 class="popup__heading ff-heading {{ heading_font_class }}">
                  {{ block.settings.heading }}
                </h3>
              {%- endunless %}

              {% liquid
                if is_countdown and block.settings.countdown_positioning == 'below_heading'
                  echo countdown
                endif
              -%}

              {% unless block.settings.text == blank -%}
                <div class="popup__text ff-body fs-body-100 rte">{{ block.settings.text }}</div>
              {%- endunless %}

              {% if is_signup == 'signup' -%}
                {% form 'customer', class: 'popup__newsletter newsletter-form', id: block.id -%}
                  {%- assign success_msg = 'general.newsletter_form.confirmation' | t -%}

                  {% render 'form-status', form: form, form_id: block.id, success_message: success_msg %}

                  {% if form.posted_successfully? -%}
                    {%- assign form_submitted = true -%}
                  {%- else -%}
                    <div class="newsletter-form__inner">
                      <input type="hidden" name="contact[tags]" value="{{ block.settings.tags }}">

                      <label for="{{ block.id }}-email" class="visually-hidden">
                        {{- 'general.newsletter_form.email_placeholder' | t -}}
                      </label>

                      <input
                        type="email"
                        class="input newsletter-form__input"
                        name="contact[email]"
                        id="{{ block.id }}-email"
                        value="{% if customer.email != blank %}{{ customer.email }}{% endif %}"
                        placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                        autocorrect="off"
                        autocapitalize="off"
                        required
                      >

                      {% render 'button',
                        label: block.settings.link_text,
                        allow_linkless: true,
                        button_size: 'full',
                        wrapper_class: 'newsletter-form__button',
                        type: 'submit'
                      -%}
                    </div>
                  {%- endif %}
                {%- endform %}
              {%- elsif type == 'age' -%}
                {% render 'button',
                  label: block.settings.verify_button_text,
                  allow_linkless: true,
                  button_attributes: 'data-dismiss-popup',
                  button_size: 'full',
                  wrapper_class: 'popup__button'
                -%}

                {%- assign decline_age_link = block.settings.decline_age_link | default: '/password' -%}

                {% render 'button',
                  label: block.settings.decline_age_text,
                  link: decline_age_link,
                  button_alignment: block.settings.content_alignment,
                  button_style: 'text',
                  wrapper_class: 'popup__dismiss-text'
                -%}
              {%- else -%}
                {% render 'button',
                  label: block.settings.link_text,
                  link: block.settings.link,
                  button_size: 'full',
                  wrapper_class: 'popup__button'
                -%}
              {%- endif %}

              {% if block.settings.dismiss_text != blank and form_submitted != true -%}
                {% render 'button',
                  label: block.settings.dismiss_text,
                  allow_linkless: true,
                  button_alignment: block.settings.content_alignment,
                  button_attributes: 'data-dismiss-popup',
                  button_style: 'text',
                  wrapper_class: 'popup__dismiss-text'
                -%}
              {%- endif %}

              {% unless block.settings.footer_text == blank -%}
                <div class="popup__footer-text ff-body fs-body-50 rte">
                  {{ block.settings.footer_text }}
                </div>
              {%- endunless %}

              {% if block.settings.show_social_icons -%}
                <div class="popup__social">
                  {% render 'social-icons', position: block.settings.content_alignment %}
                </div>
              {%- endif %}
            </div>
          </div>
        </div>
      </div>

      {% if is_signup == 'signup' -%}
        <div
          class="
            popup__tab
            popup__tab-position--{{ block.settings.tab_position }}
            {% if block.settings.enable_tab -%}
              popup__tab--enabled
            {%- endif %}
          "
          data-id="{{ block.id }}"
          style="
            --color-background: {{ block.settings.tab_background_color }};
            --color-text: {{ block.settings.tab_text_color }};
          "
        >
          {% liquid
            capture text_font_class
              render 'settings-text-size', type: 'text', size: block.settings.text_font_size
            endcapture
          -%}

          <button type="button" class="popup__tab-button ff-body {{ text_font_class }} rte">
            {{ block.settings.tab_text }}
          </button>

          <button
            type="button"
            class="popup__tab-dismiss"
            data-dismiss-tab
            aria-label="{{ 'general.accessibility.close_modal' | t }}"
          >
            {% render 'icon-button', icon: 'modal-drawer-close', icon_size: 24 %}
          </button>
        </div>
      {%- endif %}
    {%- endfor %}
  </div>
{%- endif %}

