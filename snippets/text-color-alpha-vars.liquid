{% comment %}
    Uniform range of text color alphas to be used through the theme

  Required parameters:
    - color:  { color object } Color theme / section / block setting
{% endcomment %}

{%- capture text_alphas %}
  --color-text-alpha-90: {{ color | color_modify: 'alpha', 0.9 }};
  --color-text-alpha-80: {{ color | color_modify: 'alpha', 0.8 }};
  --color-text-alpha-70: {{ color | color_modify: 'alpha', 0.7 }};
  --color-text-alpha-60: {{ color | color_modify: 'alpha', 0.6 }};
  --color-text-alpha-50: {{ color | color_modify: 'alpha', 0.5 }};
  --color-text-alpha-40: {{ color | color_modify: 'alpha', 0.4 }};
  --color-text-alpha-30: {{ color | color_modify: 'alpha', 0.3 }};
  --color-text-alpha-25: {{ color | color_modify: 'alpha', 0.25 }};
  --color-text-alpha-20: {{ color | color_modify: 'alpha', 0.2 }};
  --color-text-alpha-10: {{ color | color_modify: 'alpha', 0.1 }};
  --color-text-alpha-05: {{ color | color_modify: 'alpha', 0.05 }};
{% endcapture -%}

